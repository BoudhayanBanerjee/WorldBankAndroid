<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ronnie.WorldBankIndicators.MainActivity">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/spinnerCountry"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        style="@style/AppTheme"
        android:spinnerMode="dropdown"
        android:theme="@style/AppTheme"
        android:popupElevation="@dimen/abc_action_bar_default_height_material"
        android:background="#2dcfcfcf"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/spinnerIndicator"
        android:layout_below="@+id/spinnerCountry"
        android:layout_marginTop="20dp"
        style="@style/AppTheme"
        android:spinnerMode="dropdown"
        android:theme="@style/AppTheme"
        android:popupElevation="@dimen/abc_action_bar_default_height_material"
        android:background="#2dcfcfcf"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"/>

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerStart"
        android:layout_below="@+id/spinnerIndicator"
        android:layout_marginTop="20dp"
        style="@style/AppTheme"
        android:spinnerMode="dropdown"
        android:theme="@style/AppTheme"
        android:popupElevation="@dimen/abc_action_bar_default_height_material"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:layout_alignParentLeft="true"
        />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerEnd"
        android:layout_below="@+id/spinnerIndicator"
        android:layout_marginTop="20dp"
        style="@style/AppTheme"
        android:spinnerMode="dropdown"
        android:theme="@style/AppTheme"
        android:popupElevation="@dimen/abc_action_bar_default_height_material"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:layout_alignParentRight="true"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:id="@+id/buttonCall"
        android:layout_marginTop="80dp"
        android:clickable="true"
        android:enabled="true"
        android:textStyle="bold"
        android:theme="@style/AppTheme"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:onClick="sendAPICall"
        android:layout_below="@+id/spinnerStart"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center" />


</RelativeLayout>
